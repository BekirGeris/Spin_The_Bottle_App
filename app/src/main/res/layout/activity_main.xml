<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".AnaSayfa">

    <RadioGroup
        android:id="@+id/radio_grup"
        android:background="#8A6689A6"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oyuncu"
            android:textSize="30dp"/>
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sayısı"
            android:textSize="30dp"/>
        <RadioButton
            android:id="@+id/radio_pirates_3"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text=" 3"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/radio_ninjas_4"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text=" 4"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/radio_ninjas_5"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text=" 5"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/radio_ninjas_6"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text=" 6"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/radio_ninjas_7"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text=" 7"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/radio_ninjas_8"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text=" 8"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/radio_ninjas_9"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text=" 9"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/radio_ninjas_10"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="10"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RadioGroup>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="1dp">
            <EditText
                android:id="@+id/edit_names"
                android:layout_weight="10"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/buton_add"
                android:layout_weight="4"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <TextView
            android:id="@+id/text_players"
            android:layout_weight="8"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </LinearLayout>

</LinearLayout>